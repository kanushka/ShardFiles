doctype html
html(lang='en')
    head
        title ShardFiles
        link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', rel='stylesheet')
        link(href='../css/stylesheet.css', rel='stylesheet')
        script(src='/socket.io/socket.io.js')
        script(src='../js/script.js')
    body
        div.row
            div#container.text-center
                h3#nodeId= 'Node ' + nodeId
                if nodeId === idLeader
                    h3#leader= 'This is the leader node'
                else 
                    h3#leader= 'Node ' + idLeader + ' is the leader'

                if nodeId === idLearner
                    h6#leader= 'This is the learner node'
                else 
                    h6#learner= 'Node ' + idLearner + ' is the learner'
        if nodeId == idLeader
            div.row
                div.col-2
                div.main.col-6
                    form(method='post', action='/upload' enctype='multipart/form-data')
                        input(type='file', name='uploadFile')
                        input(type='submit', class='btn btn-outline-primary' name='uploadFile', value='Upload File')
                div.main.col-1.offset-3
                    a(href='files')
                        button(type='button' class='btn btn-outline-primary') Storage
        div.row
            div.col-3
            div.main.col-6.offset-3
                ul(class='list-group' id='log-list')
                    li.list-group-item.text-center Server Logs